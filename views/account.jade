extends base
block navbar
  +nav("Passport Auth Example ", "dropdown_menu")
    +nav_item( "index.html" ) Home
    +nav_item( "account.html", "active" ) Account
    +nav_item( "private.html" ) Private
    +nav_item( "logout.html" ) Logout
block content
  if message
    .alert.alert-danger(role="alert")!= message
  form(action='/api/accountajax',method='put')
    .form-group
      label(for=username) Email Address
      input(type='email', class='form-control', name='email', value=account.email, placeholder='Enter Email')
    .form-group
      label(for=firstname) First Name
      input(type='text', class='form-control', name='firstname', value=account.firstname, placeholder='First Name')
    .form-group
      label(for=lastname) Last Name
      input(type='text', class='form-control', name='lastname', value=account.lastname, placeholder='Last Name')
    button(type='submit', class='btn btn-default') Submit
