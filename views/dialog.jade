extends base
block navbar
  +nav("Passport Auth Example ", "dropdown_menu")
    +nav_item( "index.html" ) Home
    +nav_item( "login.html", "active" ) Login
    +nav_item( "newaccount.html" ) New Account
block content
  if message
    .alert.alert-danger(role="alert")!= message
  p Hi #{user.username}
  p 
    b #{client.name} 
    is requesting access to your account.

  form(action='/dialog/authorize/decision',method='post')
    input(type='hidden', name='transaction_id', value=transactionID)
    .btn-group
      input(type='submit', value='Allow', id='allow', class='btn btn-default')
      input(type='submit', name='cancel', value='Deny', id='deny', class='btn btn-default')

