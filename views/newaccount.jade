extends base
block navbar
  +nav("Passport Auth Example ", "dropdown_menu")
    +nav_item( "index.html" ) Home
    +nav_item( "login.html" ) Login
    +nav_item( "newaccount.html", "active" ) New Account
block content
  if message
    .alert.alert-danger(role="alert")!= message
  form(action='/api/accountajax',method='post')
    .form-group
      label(for=username) Email Address
      input(type='email', class='form-control', name='email', placeholder='Enter Email')
    .form-group
      label(for=firstname) First Name
      input(type='text', class='form-control', name='firstname', placeholder='First Name')
    .form-group
      label(for=lastname) Last Name
      input(type='text', class='form-control', name='lastname', placeholder='Last Name')
    .form-group
      label(for=password) Password
      input(type='password', class='form-control', name='password', placeholder='Password')
    button(type='submit', class='btn btn-default') Submit
